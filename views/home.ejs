<html>
    <head>
        <title>
            <%=title%>
        </title>
        <script src="https://kit.fontawesome.com/77c6958897.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>

    <body>

        <div id="contacts-List">
            <h1 id="page-heading">
                <i class="fas fa-address-book"></i>
                My Contacts List
            </h1>
                <form action="/contact-list" method="post" id="form-container">
                    <input type="text" name="name" placeholder="Enter Name" required>
                    <input type="number" name="phone" placeholder="Enter Phone" required>
                    <button type="submit" id="submit-button"> Add Contact</button>
                </form>
            
            <div id="contact-container">
                <ol>
                    <h1 >My Contacts</h1>
                 <%for(let i of contact_list){%> 
                    <li class="list-item" >
                        <div id="details">
                            <p><%= i.name%></p>
                            <p><%= i.phone%></p>
                        </div>

                        <div class="delete-contact">
                            <a href="/delete-contact/?id=<%= i._id %>"><i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                            </a>
                            
                        </div>
                       
                    </li>
                    <%} %>
                </ol>
            </div>
        </div>
       
        <script src="/javascript/home.js"></script>
    </body>
</html>